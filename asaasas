function Window:NewTab(data)
  
local Tab = setmetatable({},Tab)

Tab.List2 = Instance.new("UIListLayout")
Tab.TabBtn = Instance.new("TextButton")
Tab.Corner = Instance.new("UICorner")
Tab.Corner2 = Instance.new("UICorner")
Tab.TabFrame = Instance.new("ScrollingFrame")

Tab.Corner.Parent = Tab.TabBtn
Tab.Corner2.Parent = Tab.TabFrame

Tab.Corner.CornerRadius = UDim.new(0, 6)
Tab.Corner2.CornerRadius = UDim.new(0, 6)

Tab.TabBtn.Size = UDim2.new(1, 0, 0.1, 0)
Tab.TabBtn.BackgroundTransparency = 0
Tab.TabBtn.Text = data.Name
Tab.TabBtn.Font = Enum.Font.DenkOne
Tab.TabBtn.Parent = myWindow.TabHandler
Tab.TabBtn.TextColor3 = Color3.fromRGB(0,0,0)
Tab.TabBtn.TextSize = 14
Tab.TabBtn.Name = "b"


Tab.TabFrame.Parent = myWindow.Frame
Tab.TabFrame.Size = UDim2.new(0.79,0,0.979,0)
Tab.TabFrame.Position = UDim2.new(0.21,0,0.01,0)
Tab.TabFrame.Visible = false
Tab.TabFrame.Name = "Main"
Tab.TabFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
Tab.TabFrame.ScrollBarThickness = 0.1
Tab.TabFrame.BackgroundTransparency = 1
Tab.TabFrame.CanvasSize = UDim2.new(0,0,0,0)

Tab.List2.Parent = Tab.TabFrame
Tab.List2.Padding = UDim.new(0.01,0)

local t = Tab.TabBtn.BackgroundColor3
Tabs[data.Name] = Tab.TabFrame
local yPos = Tab.TabBtn.AbsolutePosition.Y
Tab.TabBtn.MouseButton1Click:Connect(function()
  
  local Tween = TweenService:Create(myWindow.SelectedTab, TweenInfo.new(0.5,Enum.EasingStyle.Exponential), {
    Position = UDim2.new(0.01,0,0,yPos + 3)
})

Tween:Play()
for k,v in pairs(Tabs) do
  if k ~= data.Name then
    v.Visible = false
    for _,Child in next,v.Parent.TabHandler:GetChildren() do
      if Child:IsA("TextButton") and Child.Name == "b" then
      if NightMode then
      Child.BackgroundColor3 = nightModeColors.ButtonsColor
      else
        Child.BackgroundColor3 = LightModeColors.ButtonsColor
      end
      end
      end
    elseif k == data.Name then
      v.Visible = true
      if NightMode then
      local oldColorNight = nightModeColors.ButtonsColor
      local newR = math.clamp(oldColorNight.R + 20, 0, 255)
      local newG = math.clamp(oldColorNight.G + 20, 0, 255)
      local newB = math.clamp(oldColorNight.B + 20, 0, 255)
      TweenColor(Color3.new(newR / 255, newG / 255, newB / 255),Tab.TabBtn,TweenInfo.new(0.2,Enum.EasingStyle.Linear))
      else
      local oldColorLight = LightModeColors.ButtonsColor
      local newRLight = math.clamp(oldColorLight.R +15, 0, 255)
      local newGLight= math.clamp(oldColorLight.G +15, 0, 255)
      local newBLight = math.clamp(oldColorLight.B + 15, 0, 255)
      TweenColor(Color3.new(newRLight, newGLight, newBLight),Tab.TabBtn,TweenInfo.new(0.2,Enum.EasingStyle.Linear))
      
      end
  end
end
end)
