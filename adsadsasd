local CoreUi = game:GetService("CoreGui")


local Buttons = {}
local Window = {}
local Tab = {}
local Tabs = {}

Window.__index = Window
Buttons.__index = Buttons
Tab.__index = Tab


function Window.new(name)
local self = setmetatable({}, Window)

self.Sg = Instance.new("ScreenGui")
self.Frame = Instance.new("Frame")
self.Corner = Instance.new("UICorner")
self.Corner2 = Instance.new("UICorner")
self.title = Instance.new("TextLabel")
self.TabHandler = Instance.new("Frame")

self.Sg.Parent = CoreUi
self.Frame.Parent = self.Sg
self.Corner.Parent = self.Frame
self.Corner2.Parent = self.TabHandler
self.title.Parent = self.Frame
self.TabHandler.Parent = self.Frame

self.Frame.Size = UDim2.new(0.55, 0, 0.60, 0)
self.Frame.Position = UDim2.new(0.5, 0, 0.5, 0)
self.Frame.BackgroundColor3 = Color3.fromRGB(37, 37, 37)
self.Frame.Active = true
self.Frame.Draggable = true

self.title.BackgroundTransparency = 1
self.title.Text = name
self.title.Font = Enum.Font.FredokaOne

self.Corner.CornerRadius = UDim.new(0, 6)
self.Corner2.CornerRadius = UDim.new(0, 6)

self.TabHandler.Size = UDim2.new(0.20, 0, 1, 0)
self.TabHandler.BackgroundColor3 = Color3.fromRGB(30, 30, 30)

return self
end




local myWindow = Window.new("test")



function Window:NewTab(name)
local self = setmetatable({}, Tab)


self.TabBtn = Instance.new("TextButton")

self.TabMain = Instance.new("Frame")
self.Corner = Instance.new("UICorner")
self.Corner2 = Instance.new("UICorner")
self.Layout = Instance.new("UIListLayout")
self.TabFrame = Instance.new("Frame")
self.Corner.Parent = self.TabBtn
self.Corner2.Parent = self.TabFrame

self.Corner.CornerRadius = UDim.new(0, 6)
self.Corner2.CornerRadius = UDim.new(0, 6)

self.TabBtn.Size = UDim2.new(1, 0, 0.07, 0)
self.TabBtn.BackgroundTransparency = 0
self.TabBtn.Text = name
self.TabBtn.Font = Enum.Font.FredokaOne
self.TabBtn.Parent = myWindow.TabHandler
self.Layout.Parent = myWindow.TabHandler
self.TabFrame.Parent = myWindow.Frame


self.TabFrame.Size = UDim2.new(0.72,0,0.98,0)
self.TabFrame.Position = UDim2.new(0.25,0,0.01,0)
self.TabFrame.BackgroundColor3 = Color3.fromRGB(30,30,30)

self.TabBtn.BackgroundColor3 = Color3.fromRGB(40,40,40)
self.TabBtn.TextColor3 = Color3.fromRGB(0,0,0)
self.TabBtn.TextSize = 14

self.TabFrame.Visible = false

self.Layout.Padding = UDim.new(0,3)

Tabs[name] = self.TabFrame

self.TabBtn.MouseButton1Click:Connect(function()
for k,v in pairs(Tabs) do
    if k ~= name then
      v.Visible = false
      else
       v.Visible = true
      end
    end
end)

return self
end
function test()
print("test")
end

function Tab:NewButton(P,Name,Callback)
local self = setmetatable({},Buttons)
self.button = Instance.new("TextButton")
self.Corner = Instance.new("UICorner")
self.List = Instance.new("UIListLayout")

self.button.Parent = P.TabFrame
self.button.Text = Name
self.button.Font = Enum.Font.FredokaOne
self.button.Size = UDim2.new(0, 0.4, 0, 0.2)
self.button.Position = UDim2.new(0.5,0,1.2,0)
self.button.TextColor3 = Color3.fromRGB(0,0,0)
self.button.TextSize = 14


self.Corner.Parent = self.button
self.Corner.CornerRadius = UDim.new(0,6)

self.button.BackgroundColor3 = Color3.new(1, 1, 1)

self.button.MouseButton1Click:Connect(function() 
Callback()
   end)
   
   return self
end
function test() 
print("test")
end
local tab1 = Window:NewTab("test")
local tab2 = Window:NewTab("Hi")
Tab:NewButton(tab1,"test1",test)
Tab:NewButton(tab2,"test2",test)






